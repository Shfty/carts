bullet = entity:new({
	s = 5,
	sx = 4,
	sy = 8
}, true)

bullet._update = function(self)
	entity._update(self)
	
	self.y -= 4
	
	if(self.y < 0) do
		del(entities, self)
		self = nil
	end
end

