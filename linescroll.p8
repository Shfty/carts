-- draw

function _draw()
	cls()
	
	draw_linescroll()
	draw_entities()
	draw_hud()	
end

function draw_linescroll()
	for y=0, 127, 1 do
		clip(0, y, 127, 1)
		camera(-linescroll(y), cam_y)
		
		map(
			0, 0,
			0, 0,
			8, 32
		)
	end
end

function draw_entities()
	clip()
	camera()
	
	for e in all(entities) do
		e:_draw()
	end
end

function draw_hud()
	clip()
	camera()
	
	cursor(2, 2)
	print("amp " .. amp)
	print("scale " .. scale)
end
