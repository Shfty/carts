-- update

cam_y = 128
scroll_rate = 1.0

player:new({
	x = 32,
	y = 120
})

enemy:new({
	x = 16,
	y = 0
})

function _update60()
	for e in all(entities) do
		e:_update()
	end
	
	cam_y -= scroll_rate
	if(cam_y < 0)
	then
	 cam_y = 128
	end
end

