enemy = entity:new({
	s = 4,
	sx = 4,
	sy = 8
}, true)

enemy._update = function(self)
	entity._update(self)
	
	self.y += 1
	
	if(self.y > 127) do
		del(entities, self)
		self = nil
	end
end

enemy._draw = function(self)
	pal(6, 12)
	pal(5, 1)
	pal(13, 2)
	entity._draw(self)
	pal()
end
